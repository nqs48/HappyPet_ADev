@page
@model HappyPet.App.Frontend.Pages.Mascotas.Editar.EditarMascotaModel
@{
}
<style>
    .main-title{
        text-align: center;
        color: whitesmoke;
        background-color: black;
        border-radius: 15px;
        padding: 20px;
    }


    .section-form{
        display: flex;
        justify-content: center;
        margin:1rem ;
        padding: 1rem;
    }

    
    .form-form{
        width: 35%;
        background-color: aliceblue;
        border-radius: 1rem;
        padding: 1.5rem;

    }

    .boton-form{
        display: flex !important;
        justify-content: center !important;
    }

    .container-buttons{   
        width: auto;
        display: flex;
        justify-content:space-evenly;
        background-color: aliceblue !important;
        padding: 2rem;
    }

    .container-buttons a:hover{
        background-color: black !important;
        color: gold;
    }
    .container-buttons a:active{
        background-color: black !important;
    }

    .boton-form button:hover{
        background-color: black !important;
        color: gold;
    }

    .boton-form button:active{
        background-color: black !important;
    }


</style>


<main>
    <h1 class="main-title">Editar Mascota<br>ID: @Model.Mascota.Id<br></h1>
    <section class="section-form">
        <form class="form-form" method="post">
            <input type="hidden" asp-for="Mascota.Id" />

            <div class="form-group">
                <strong><label asp-for="Mascota.Nombre"></label></strong>
                <input asp-for="Mascota.Nombre" class="form-control">
                <span class="text-danger" asp-validation-for="Mascota.Nombre"></span>
            </div>

            <div class="form-group">
                <strong><label asp-for="Mascota.Especie"></label></strong>
                <input asp-for="Mascota.Especie" class="form-control">
                <span class="text-danger" asp-validation-for="Mascota.Especie"></span>
            </div>

            <div class="form-group">
                <strong><label asp-for="Mascota.Raza"></label></strong>
                <input asp-for="Mascota.Raza" class="form-control">
                <span class="text-danger" asp-validation-for="Mascota.Raza"></span>
            </div>

            @* <div class="form-group">
                <strong><label asp-for="mascota.Cliente.Id"> Id Propietario</label></strong>
                <select asp-for="clienteSeleccionado" class="form-control"> 
                  <option label="seleccionar" value="-1"></option>
                  @foreach (var item in Model.Clientes)
                  {
                    <option label="@item.Nombres @item.Apellidos" value="@item.Id"></option>   
                  }
                </select>
            </div> *@


            <div class="boton-form">
                <button type="submit" class="btn btn-primary">Actualizar</button><br>
             </div> 
            
        </form>
    </section>


    <aside class="container-buttons">
            <a class="btn table-btn" asp-page="../Mascota" asp-route-idMascota="@Model.Mascota.Id"><i class="fas fa-boxes fa-lg"></i><br><b>Menu Mascotas</b></a>
            <a class="btn table-btn" asp-page="../Detalles/Detalles" asp-route-idMascota="@Model.Mascota.Id"><i class="fas fa-eye fa-lg"></i><br>Ver Mascota</a>
            
    </aside>
</main>