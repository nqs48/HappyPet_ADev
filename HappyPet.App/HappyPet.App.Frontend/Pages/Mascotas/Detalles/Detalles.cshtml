@page
@model HappyPet.App.Frontend.Pages.Mascotas.Detalles.DetallesModel
@{
}
<style>
    
    .main-title{
        text-align: center;
        color: whitesmoke;
        background-color: black;
        border-radius: 15px;
        padding: 20px;
    }

    .container-buttons{   
        display: flex;
        justify-content:space-evenly;
        background-color: aliceblue !important;
        padding: 2rem;
    }

    .container-buttons a:hover{
        background-color: black !important;
        color: gold;
    }
    .container-buttons a:active{
        background-color: black !important;
    }
    
    .main-section{
        display: flex;
        justify-content: center;
    }

    .container-information{
        background-color: aliceblue;
        padding: 1rem;
        margin: 1rem;
        text-align: center;
        border-radius: 15px;

    }
</style>

<main>
    <h1 class="main-title">Detalle de Mascotas</h1>

    <section class="main-section">
        <div class="container-information">
            <strong>MASCOTA</strong><br><br>
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Especie</th>
                    <th>Raza</th>
                    <th>Id Propietario</th>
                </tr>
                <tr>
                    <td>@Model.Mascota.Id</td>
                    <td>@Model.Mascota.Nombre</td>
                    <td>@Model.Mascota.Especie</td>
                    <td>@Model.Mascota.Raza</td>
                    @if(Model.Mascota.Cliente == null){
                      <td>N/A</td>
                    }else{
                      <td>@Model.Mascota.Cliente.Id</td>
                    }
                </tr>
            </table>
        </div> 
    </section>

    <aside class="container-buttons">
        <a class="btn table-btn" asp-page="../Mascota"><i class="fas fa-undo fa-lg"></i><br><strong>Return</strong></a>
        <a class="btn table-btn" asp-page="../Editar/EditarMascota"  asp-route-idMascota="@Model.Mascota.Id"><i class="fas fa-address-book fa-lg"></i><br><b>Editar</b></a>
        <a class="btn table-btn" asp-page="../Eliminar/EliminarMascota"  asp-route-idMascota="@Model.Mascota.Id"><i class="fas fa-trash fa-lg"></i><br><b>Eliminar</b></a>
    </aside>

</main>